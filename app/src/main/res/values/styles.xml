<resources>

    <style name="general_edit">
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="general_button">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/general_button</item>
        <item name="android:background">@drawable/general_button</item>
    </style>

    <style name="general_separator">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorSeparator</item>
    </style>

</resources>
